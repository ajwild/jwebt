{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "outDir": "lib-cjs",
    "moduleResolution": "node",
    "sourceMap": true,
    // Disabled to avoid declaration output when building UMD
    // Use --declaration with CLI instead
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
